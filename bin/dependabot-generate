#!/usr/bin/env bash

set -eu

echo -n "version: 2
updates:" > .github/dependabot.yaml

for dockerfile in $(find . -type f -name Dockerfile); do
    echo -n "
    -
        package-ecosystem: docker
        directory: $(dirname "${dockerfile}")
        schedule:
            interval: daily
        assignees:
            - ro0NL" >> .github/dependabot.yaml
done

echo "" >> .github/dependabot.yaml
